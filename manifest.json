{
  "name": "Juvenilia Dashboard",
  "short_name": "Juvenilia",
  "description": "Dashboard di gestione gare Polisportiva Juvenilia",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1a237e",
  "theme_color": "#1a237e",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["sports", "productivity", "utilities"],
  "lang": "it-IT",
  "dir": "ltr",
  "prefer_related_applications": false,
  
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "icon-144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "screenshots": [
    {
      "src": "screenshot-mobile.png",
      "sizes": "375x667",
      "type": "image/png",
      "platform": "narrow",
      "label": "Dashboard su smartphone"
    },
    {
      "src": "screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Dashboard su desktop"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Nuova Gara",
      "short_name": "Nuova",
      "description": "Crea una nuova gara",
      "url": "/nuova-gara.html",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Statistiche",
      "short_name": "Stats",
      "description": "Visualizza statistiche gare",
      "url": "/statistiche.html",
      "icons": [
        {
          "src": "icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  
  "related_applications": [],
  
  "protocol_handlers": [
    {
      "protocol": "web+juvenilia",
      "url": "/?gara=%s"
    }
  ],
  
  "display_override": ["window-controls-overlay", "standalone"],
  
  "edge_side_panel": {
    "preferred_width": 360
  },
  
  "launch_handler": {
    "client_mode": "auto"
  },
  
  "handle_links": "preferred",
  
  "share_target": {
    "action": "/condividi",
    "method": "GET",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link"
    }
  },
  
  "file_handlers": [
    {
      "action": "/importa-gara",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ]
}
